<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>渊山资本 | Yuanshan Capital</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- React & ReactDOM CDN -->
    <script src="https://unpkg.com/react@18/umd/react.production.min.js"></script>
    <script src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"></script>
    <!-- Babel for JSX -->
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>
    <!-- Three.js CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
    <style>
        @keyframes scan { 0% { transform: translateX(-100%); } 100% { transform: translateX(400%); } }
        .animate-scan { animation: scan 4s linear infinite; }
        body { background-color: #f8fafc; }
        canvas { display: block; }
    </style>
</head>
<body>
    <div id="root"></div>

    <script type="text/babel">
        const { useState, useEffect, useRef } = React;

        const translations = {
            cn: {
                nav: ['关于我们', '团队', '投资组合'],
                sloganTop: ['渊', '渟', '岳', '峙'],
                sloganBottom: ['积', '厚', '成', '山'], 
                enLabel: 'EN',
                intro1: '渊山资本是一家专注于硬科技与未来产业的投资机构。',
                intro2: '我们通过跨越周期的深度研究，寻找那些具备长期复利价值的科技地标。',
                aboutTitle: '关于我们',
                aboutSub: '渊渟岳峙，积厚成山',
                location: '北京 / 上海',
            },
            en: {
                nav: ['About', 'Team', 'Portfolio'],
                sloganTop: ['YUAN', 'TING', 'YUE', 'ZHI'],
                sloganBottom: ['JI', 'HOU', 'CHENG', 'SHAN'],
                enLabel: '中',
                intro1: 'Yuanshan Capital is an investment firm focused on hard tech and future industries.',
                intro2: 'We seek landmarks with long-term compound value through cycle-spanning research.',
                aboutTitle: 'About Us',
                aboutSub: 'PROFOUND DEPTH / RISING PEAKS',
                location: 'Beijing / Shanghai',
            }
        };

        const Logo = () => (
            <svg viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg" className="w-full h-full">
                <path d="M18 50 L42 12 L55 35 L68 18 L82 50 Z" fill="currentColor" />
                <path d="M18 58 C35 88 65 88 82 58" stroke="currentColor" strokeWidth="3" strokeLinecap="round" />
                <path d="M30 68 C45 95 60 70 75 75" stroke="currentColor" strokeWidth="2.5" strokeLinecap="round" opacity="0.7" />
                <path d="M40 82 C50 99 55 85 65 92" stroke="currentColor" strokeWidth="2.5" strokeLinecap="round" opacity="0.4" />
            </svg>
        );

        const HeroParticleEngine = ({ height = "450px" }) => {
            const mountRef = useRef(null);
            const particleCount = 60000;

            useEffect(() => {
                const THREE = window.THREE;
                if (!THREE || !mountRef.current) return;

                const scene = new THREE.Scene();
                const width = mountRef.current.clientWidth;
                const heightNum = parseInt(height);
                const camera = new THREE.PerspectiveCamera(40, width / heightNum, 1, 5000);
                camera.position.set(0, 110, 950);

                const renderer = new THREE.WebGLRenderer({ antialias: true, alpha: true });
                renderer.setSize(width, heightNum);
                renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
                mountRef.current.appendChild(renderer.domElement);

                const posMountain = new Float32Array(particleCount * 3);
                const posOcean = new Float32Array(particleCount * 3);

                for (let i = 0; i < particleCount; i++) {
                    const i3 = i * 3;
                    const mx = (Math.random() - 0.5) * 1400;
                    const mz = (Math.random() - 0.5) * 800;
                    const distM = Math.sqrt(mx * mx + mz * mz);
                    const hM = Math.max(0, (550 - distM * 0.9) * (Math.random() * 0.4 + 0.7));
                    posMountain[i3] = mx;
                    posMountain[i3 + 1] = hM - 180;
                    posMountain[i3 + 2] = mz;

                    const ox = (Math.random() - 0.5) * 1800;
                    const oz = (Math.random() - 0.5) * 1500;
                    const isSurface = Math.random() > 0.15;
                    posOcean[i3] = ox;
                    posOcean[i3 + 1] = isSurface ? -100 : -180 - Math.random() * 80; 
                    posOcean[i3 + 2] = oz;
                }

                const geometry = new THREE.BufferGeometry();
                geometry.setAttribute('position', new THREE.BufferAttribute(posMountain, 3));
                geometry.setAttribute('targetPosition', new THREE.BufferAttribute(posOcean, 3));

                const vertexShader = `
                    attribute vec3 targetPosition;
                    uniform float uTransition;
                    uniform float uTime;
                    void main() {
                        vec3 posA = position;
                        vec3 posB = targetPosition;
                        float mtWave = sin(uTime * 0.5 + posA.x * 0.009) * 15.0;
                        float wind = sin(uTime * 1.5 + posA.x * 0.02) * 8.0;
                        posA.y += (mtWave + wind) * (1.0 - uTransition);
                        float oceanWave = sin(posB.x * 0.004 + uTime * 0.8) * 14.0 + cos(posB.z * 0.005 + uTime * 0.7) * 10.0;
                        vec2 vL = vec2(450.0, 150.0); vec2 vS = vec2(-350.0, -200.0);
                        float vOut = 0.0;
                        float dL = length(posB.xz - vL);
                        if(dL < 320.0) {
                            float sL = 1.0 - pow(dL / 320.0, 1.4);
                            vOut -= sin(uTime * 1.6) * 24.0 * sL;
                            float rL = uTime * 1.3 * sL;
                            posB.xz = mat2(cos(rL), -sin(rL), sin(rL), cos(rL)) * (posB.xz - vL) + vL;
                        }
                        if(posB.y > -140.0) posB.y += (oceanWave + vOut) * uTransition;
                        float flow = sin(uTransition * 3.14159) * 45.0;
                        vec3 finalPos = mix(posA, posB, uTransition);
                        finalPos.x += sin(finalPos.y * 0.015 + uTime) * flow;
                        finalPos.z += cos(finalPos.x * 0.01 + uTime) * flow;
                        vec4 mvPos = modelViewMatrix * vec4(finalPos, 1.0);
                        gl_PointSize = 3.8 * (1000.0 / -mvPos.z); 
                        gl_Position = projectionMatrix * mvPos;
                    }
                `;

                const fragmentShader = `
                    void main() {
                        float d = distance(gl_PointCoord, vec2(0.5));
                        if (d > 0.5) discard;
                        gl_FragColor = vec4(0.38, 0.45, 0.95, smoothstep(0.5, 0.25, d) * 0.65); 
                    }
                `;

                const material = new THREE.ShaderMaterial({
                    uniforms: { uTransition: { value: 0.0 }, uTime: { value: 0.0 } },
                    vertexShader, fragmentShader, transparent: true, blending: THREE.NormalBlending, depthWrite: false
                });

                const points = new THREE.Points(geometry, material);
                scene.add(points);

                let tTarget = 0;
                const animate = () => {
                    requestAnimationFrame(animate);
                    const time = performance.now() * 0.001;
                    material.uniforms.uTime.value = time;
                    material.uniforms.uTransition.value += (tTarget - material.uniforms.uTransition.value) * 0.022;
                    points.rotation.y += 0.0004;
                    renderer.render(scene, camera);
                };
                animate();

                const onResize = () => {
                    const w = mountRef.current.clientWidth;
                    const h = mountRef.current.clientHeight;
                    camera.aspect = w / h; camera.updateProjectionMatrix();
                    renderer.setSize(w, h);
                };
                window.addEventListener('resize', onResize);
                const interval = setInterval(() => { tTarget = tTarget === 0 ? 1 : 0; }, 8000);

                return () => {
                    window.removeEventListener('resize', onResize);
                    clearInterval(interval);
                    if (mountRef.current) mountRef.current.removeChild(renderer.domElement);
                };
            }, []);

            return <div ref={mountRef} className="w-full relative" style={{ height }} />;
        };

        const App = () => {
            const [activeTab, setActiveTab] = useState('home');
            const [lang, setLang] = useState('cn');
            const t = translations[lang];

            return (
                <div className="min-h-screen text-slate-900 font-sans overflow-x-hidden">
                    <nav className="fixed w-full z-50 top-0 py-8 px-12 md:px-24 flex justify-between items-baseline border-b border-slate-200 bg-white/80 backdrop-blur-xl">
                        <div className="flex items-center gap-4 cursor-pointer group" onClick={() => setActiveTab('home')}>
                            <div className="w-12 h-12 text-indigo-600 transition-transform duration-500 group-hover:scale-110">
                                <Logo />
                            </div>
                            <div className="flex flex-col ml-2">
                                <span className="text-xl font-black tracking-tighter uppercase group-hover:text-indigo-600 transition-colors leading-none">Yuanshan</span>
                                <span className="text-[7px] tracking-[0.6em] text-slate-400 uppercase font-black">Capital</span>
                            </div>
                        </div>
                        <div className="flex items-center gap-12 text-[10px] font-black tracking-[0.4em] uppercase text-slate-400">
                            {['about', 'team', 'portfolio'].map((tab, idx) => (
                                <button key={tab} onClick={() => setActiveTab(tab)} className={`hover:text-slate-900 transition-all ${activeTab === tab ? 'text-indigo-600 border-b border-indigo-600' : ''} pb-1`}>
                                    {t.nav[idx]}
                                </button>
                            ))}
                            <button onClick={() => setLang(lang === 'cn' ? 'en' : 'cn')} className="text-slate-400 hover:text-indigo-600 transition-all font-black text-xs">
                                {t.enLabel}
                            </button>
                        </div>
                    </nav>

                    <main className="max-w-6xl mx-auto pt-20">
                        {activeTab === 'home' && (
                            <section className="min-h-screen flex flex-col justify-start relative">
                                <div className="mt-[96px] mb-[96px]">
                                    <HeroParticleEngine height="450px" />
                                </div>
                                <div className="max-w-4xl mx-auto w-full font-mono mb-12 px-8">
                                    <div className="grid grid-cols-4 gap-4 md:gap-8 mb-8">
                                        <div className="text-6xl md:text-7xl font-black text-slate-950 text-center">{t.sloganTop[0]}</div>
                                        <div className="text-6xl md:text-7xl font-black text-slate-400 text-center">{t.sloganTop[1]}</div>
                                        <div className="text-6xl md:text-7xl font-black text-slate-400 text-center">{t.sloganTop[2]}</div>
                                        <div className="text-6xl md:text-7xl font-black text-slate-400 text-center">{t.sloganTop[3]}</div>
                                    </div>
                                    <div className="w-full h-[1px] bg-slate-200 mb-8 relative overflow-hidden">
                                        <div className="absolute top-0 left-0 w-1/4 h-full bg-indigo-400/30 animate-scan"></div>
                                    </div>
                                    <div className="grid grid-cols-4 gap-4 md:gap-8">
                                        <div className="text-6xl md:text-7xl font-black text-slate-400 text-center">{t.sloganBottom[0]}</div>
                                        <div className="text-6xl md:text-7xl font-black text-slate-400 text-center">{t.sloganBottom[1]}</div>
                                        <div className="text-6xl md:text-7xl font-black text-slate-400 text-center">{t.sloganBottom[2]}</div>
                                        <div className="text-6xl md:text-7xl font-black text-slate-950 text-center">{t.sloganBottom[3]}</div>
                                    </div>
                                </div>
                                <div className="text-center space-y-8 pb-32">
                                    <p className="text-2xl md:text-3xl font-black text-indigo-600 px-4">{t.intro1}</p>
                                    <p className="text-lg md:text-xl text-slate-400 max-w-4xl mx-auto px-4 italic">{t.intro2}</p>
                                </div>
                            </section>
                        )}
                        {activeTab !== 'home' && (
                             <section className="pt-32 px-12 md:px-24 pb-20 text-center text-slate-400">
                                页面内容正在同步中...
                             </section>
                        )}
                    </main>

                    <footer className="pt-24 pb-12 px-12 md:px-24 border-t border-slate-200 bg-white text-slate-400">
                        <div className="max-w-7xl mx-auto flex flex-col md:flex-row justify-between items-start gap-12">
                            <div className="space-y-4">
                                <div className="w-12 h-12 text-indigo-600 opacity-50"><Logo /></div>
                                <p className="text-[9px] font-black tracking-[0.4em] uppercase font-mono">Yuanshan Capital Group <br/> 渊渟岳峙，积厚成山</p>
                            </div>
                            <div className="grid grid-cols-2 gap-20 text-[9px] font-black tracking-[0.4em] uppercase font-mono">
                                <div className="space-y-4">
                                    <p className="text-slate-800 border-b border-indigo-500 pb-1">Network</p>
                                    <p className="text-indigo-600 font-bold">bp@yuanshancapital.com</p>
                                </div>
                                <div className="space-y-4">
                                    <p className="text-slate-800 border-b border-indigo-500 pb-1">Nodes</p>
                                    <p>{t.location}</p>
                                </div>
                            </div>
                        </div>
                    </footer>
                </div>
            );
        };

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<App />);
    </script>
</body>
</html>
